{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "../dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "paths": {
      "../shared/*": ["../shared/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}