{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "b2",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../../packages/client/build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd ../../packages/client && npm start",
    "beforeBuildCommand": "cd ../../packages/client && npm run build && cp -r build/ ../desktop/"
  },
  "app": {
    "windows": [
      {
        "title": "b2",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APP/*", "$DOCUMENT/*", "$HOME/**"],
        "requireLiteralLeadingDot": false
      }
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "path": {
      "all": true
    }
  }
}
