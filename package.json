{
  "name": "second-brain",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=@second-brain/server",
    "dev:client": "npm run dev --workspace=@second-brain/client",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "npm run build --workspace=@second-brain/shared",
    "build:server": "npm run build --workspace=@second-brain/server",
    "build:client": "npm run build --workspace=@second-brain/client",
    "start": "npm run start --workspace=@second-brain/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}