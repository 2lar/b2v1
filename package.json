{
  "name": "second-brain-simple",
  "version": "0.1.0",
  "description": "A simple second brain application with file-based storage",
  "main": "dist/server/src/index.js",
  "scripts": {
    "start": "node dist/server/src/index.js",
    "build:server": "cd server && ./node_modules/.bin/tsc -p tsconfig.json && node ../scripts/copy-shared-types.js",
    "build:client": "cd client && npm install && npm run build",
    "copy-client": "mkdir -p dist/client && cp -r client/build dist/client/build",
    "server": "ts-node-dev --respawn --transpile-only server/src/index.ts",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "lint-fix": "eslint --ext .js,.ts,.tsx . --fix",
    "prepare-types": "node scripts/prepare-types.js",
    "render-build": "node render-build.js",
    "build:ts": "./node_modules/.bin/tsc -p server/tsconfig.json",
    "build": "tsc && node scripts/copy-shared-types.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "axios": "^1.8.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.24",
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
